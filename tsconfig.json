{
     "compilerOptions": {
          "target": "ES2016",
          "module": "CommonJS",
          "rootDir": "./src",
          "outDir": "./dist",
          "importHelpers": true,
          "esModuleInterop": true,
          "forceConsistentCasingInFileNames": true,
          "strict": true,
          "noImplicitAny": true,
          "strictNullChecks": true,
          "strictFunctionTypes": true,
          "strictPropertyInitialization": true,
          "noImplicitThis": true,
          "skipLibCheck": true,
     },

     "include": ["src/**/*"]
}